<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".About"
    android:background="@color/white_med"
    android:orientation="horizontal"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kelompok: "
            android:fontFamily="@font/poppins"
            android:textColor="@color/pallet_med"
            android:textSize="20dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gabriel Jevon E (5210411028)"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dwi Rangga Okta Z (5210411054)"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muhajir Alanshari (5210411061)"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuvita Nur Hayati (5210411067)"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagus Ardi Pratama (5210411370)"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us: "
            android:fontFamily="@font/poppins"
            android:textColor="@color/pallet_med"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nama"
            android:src="@drawable/call"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="call"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/sms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/sms" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sms"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/mail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/mail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mail"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/maps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/maps"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maps"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/website"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/website"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="web"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>


    </LinearLayout>

</LinearLayout>
